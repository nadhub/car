<section id="prix" class="container content-section text-center">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1">
                <h4>Réservation en ligne : 2h avant <br /><br /> Réservation par téléphone : 30 minutes avant</h4>
                <form class="form-inline" ng-submit="calculDistance()">
                    <div class="form-group">
                        <input class="form-control " placeholder="Départ" id="depart" ng-model="depart" required/>
                        <input class="form-control " placeholder="Destination" id="destination" ng-model="destination" required/>
                            <select class="form-control input-large" ng-options="item.value as item.type for item in vehicle" ng-model="typeVehicle" required>
                                <option></option>
                                
                            </select>
                        <input type="number" class="form-control" placeholder="Nombre de personne" id="personne"/>
                        <button class="btn btn-primary btn-md prix" ng-disabled="form.$invalid">Prix </button>
                    </div>
                 </form>
            </div>
        </div>
</section>