<div class="modal fade" id="myRecap" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    
    <form class="form-horizontal" role="form">
        <div class="modal-dialog modal-lg">
            <div class="modal-content text-left">
                <div class="modal-header">
                    <!--<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>-->
                    <h4 class="modal-title" id="myModalLabel">Informations sur le trajet</h4>
                </div>

                <!-- modal body -->

                <div class="modal-body recap">
                    <div  class="row">
                    <div class="">
                        <div class="form-group">
                                <label class="control-label col-sm-4" for="depart">Départ:</label>
                                <div class="col-sm-6">
                                    <input class="form-control" type="text" name="depart" ng-model= "name0rigine" readonly/>
                                </div>
                        </div>
                        <div class="form-group">
                                <label class="control-label col-sm-4" for="destination">Destination:</label>
                                <div class="col-sm-6">
                                    <input class="form-control" type="text" name="destination" ng-model="nameDestination" readonly/>
                                </div>
                        </div>
                        <div class="form-group">
                                <label class="control-label col-sm-4" for="km">Km:</label>
                                <div class="col-sm-6">
                                    <input class="form-control" type="text" name="km" ng-model="nbKms" readonly/>
                                </div>
                        </div>
                        <div class="form-group">
                                <label class="control-label col-sm-4" for="duration">Temps estimé:</label>
                                <div class="col-sm-6">
                                    <input class="form-control" type="text" name="duration" ng-model="duration" readonly/>
                                </div>
                        </div>
                        <div class="form-group">
                                <label class="control-label col-sm-4" for="prix">Prix:</label>
                                <div class="col-sm-6">
                                    <input class="form-control" type="text" name="prix" ng-model="price" readonly/>
                                </div>
                        </div>


                        
                    </div>
                </div>

                </div>

                <!-- end modal body -->

                <div class="modal-footer">
                    <button type="button" class="btn btn-default"  ng-click="clearMyData()">Modifier</button>
                    <button type="submit" class="btn btn-default" data-toggle="modal" data-dismiss="modal" data-target="#reserver">Réserver</button>
                </div>
            </div>
        </div>
    </form>
</div>
